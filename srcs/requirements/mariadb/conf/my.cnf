[mysqld]
# Base Settings
user=mysql
datadir=/var/lib/mysql
socket=/run/mysql/mysql.sock
pid-file=/run/mysql/mysql.pid
lower_case_table_names=0

# Network
port=3306
bind-address=0.0.0.0

# Security
skip-networking=false
skip-bind-address=false

# Log Settings
log_error=/var/lib/mysql/error.log
general_log=0

[client]
port=3306
socket=/run/mysql/mysql.sock
